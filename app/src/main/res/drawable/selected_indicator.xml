<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer Circle (larger) -->
    <item>
        <shape
            android:shape="oval">
            <solid android:color="#000000"/> <!-- Change color as needed -->
        </shape>
    </item>

    <!-- Inner Circle (smaller, centered) -->
    <item android:left="10dp" android:right="10dp" android:top="10dp" android:bottom="10dp">
        <shape
            android:shape="oval">
            <solid android:color="#F7F2F2"/> <!-- Change color as needed -->
        </shape>
    </item>
</layer-list>
